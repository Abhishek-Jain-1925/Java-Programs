import java.util.*;
class starPattern1
{
	public static void main(String args[])
	{
		Scanner sc = new Scanner(System.in);
		int i,j,n;
		System.out.println("\n\t Enter How Many Number of Rows You Want : ");
		n = sc.nextInt();
		
		for(i=0;i<n;i++)
		{
			for(j=0;j<=i;j++)
			{
				System.out.print("\t * ");
			}
			System.out.println("\n");
		}
	}
}
